{
    "$id": "urn:ukaea:facility:hive:campaign",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Metadata schema for a HIVE campaign",
    "type": "object",
    "required": [
        "campaignID",
        "campaignTitle",
        "campaignStart",
        "experiment"
    ],
    "properties": {
        "campaignID": {
            "type": "string",
            "example": "HIVE-XXXXXX"
        },
        "campaignTitle": {
            "type": "string"
        },
        "campaignStart": {
            "type": "string",
            "format": "date-time"
        },
        "campaignEnd": {
            "type": "string",
            "format": "date-time"
        },
        "experiment": {
            "$ref": "./experiment.schema.json#"
        }
    }
}
