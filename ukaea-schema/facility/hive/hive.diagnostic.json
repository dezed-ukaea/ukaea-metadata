{
    "$id": "urn:ukaea:facility:hive-diagnostic",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Metadata schema for a HIVE diagnostic",
    "type": "object",
    "required": [
        "portID",
        "diagnostic",
    ],
    "properties": {
        "portID": {
            "type": "string",
            "enum": [
                "Port_1",
                "Port_2",
                "Port_3",
                "Port_4",
                "Port_5",
                "Port_6",
                "Port_7",
                "Port_8",
                "Port_9",
                "Port_10",
                "Port_11",
            ],
            "$comment": "Need a better ID system for the ports"
        },
        "diagnostic": {
            "type": "object",
            "properties": {
                "oneOf": [
                        { "$ref": "./diagnostics/dic.schema.json" },
                        { "$ref": "./diagnostics/tc.schema.json" }
                    ]
                }
            }
        }
    }
}
