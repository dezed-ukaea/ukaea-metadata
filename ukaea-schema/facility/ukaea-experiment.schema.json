{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "urn:ukaea:experiment-schema",
    "description": "Metadata schema for UKAEA experiments",
    "type": "object",
    "required": [
        "experimental_id",
        "title",
        "start_datetime",
        "location",
        "principal_investigator"
    ],
    "properties": {
        "experimental_id": {
            "type": "string",
            "description": "A unique identifier for the experiment."
        },
        "title": {
            "type": "string",
            "description": "A descriptive title for the experiment."
        },
        "description": {
            "type": "string",
            "description": "A brief summary of the experiment's purpose and objectives."
        },
        "start_datetime": {
            "type": "string",
            "format": "date-time",
            "description": "The date and time when the experiment began."
        },
        "end_datetime": {
            "type": "string",
            "format": "date-time",
            "description": "The date and time when the experiment concluded."
        },
        "location": {
            "type": "string",
            "description": "Physical or virtual location where the experiment was conducted."
        },
        "principal_investigator": {
            "type": "string",
            "description": "Principal investigator or supervisor."
        },
        "researchers": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["name", "role"],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the individual."
                    },
                    "role": {
                        "type": "string",
                        "description": "Role of the individual in the experiment."
                    }
                }
            },
            "description": "List of individuals involved in the experiment."
        },
        "comments": {
            "type": "string",
            "description": "Additional comments pertaining to the experiment."
        }
    }
}
