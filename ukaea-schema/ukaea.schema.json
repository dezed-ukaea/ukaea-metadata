{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "urn:ukaea:toplevel-schema",
    "description": "UKAEA top-level metadata schema",
    "type": "object",
    "required": [
        "identifier",
        "creator",
        "workflowType",
        "isPublished",
        "dataQuality"
    ],
    "properties": {
        "identifier": {
            "type": "string",
            "description": ""
        },
        "creator": {
            "type": "string",
            "description": "Person overseeing the creation of the data, i.e. the Session Leader for a MAST-U shot, Lead Investigator for HIVE, or the user running a simulation."
        },
        "creationTime": {
            "type": "string",
            "format": "date-time",
            "description": "Creation time for this metadata entry."
        },
        "workflowType": {
            "type": "string",
            "enum": [
                "facility",
                "simulation"
            ],
            "description": ""
        },
        "isPublished": {
            "type": "bool",
            "description": ""
        },
        "quality": {
            "type": "string",
            "enum": [
                "unchecked",
                "bad",
                "pass",
                "good"
            ],
            "description": ""
        },
        "description": {
            "type": "string",
            "description": ""
        },
        "license": {
            "type": "string",
            "description": ""
        },
        "inputDatasets": {
            "type": "string",
            "description": ""
        },
        "ukaeaUsername": {
            "type": "string",
            "description": ""
        },
        "updatedTime": {
            "type": "string",
            "format": "date-time",
            "description": ""
        },
        "updatedBy": {
            "type": "string",
            "description": ""
        }
    }
}
